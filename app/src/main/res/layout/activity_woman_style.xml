<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.sao.modclothesproject.WomanStyleActivity">

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Pear Shape"
        android:id="@+id/btnPear"
        android:layout_marginTop="10dp"
        android:textColor="@color/white"
        android:background="@color/green"
        android:layout_below="@+id/btnApple"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Apple Shape"
        android:id="@+id/btnApple"
        android:textColor="@color/white"
        android:background="@color/red"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="HourGlass Shape"
        android:textColor="@color/white"
        android:id="@+id/btnHourGlass"
        android:background="#CD8162"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/btnPear"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Rectangle Shape"
        android:textColor="@color/white"
        android:background="#838B83"
        android:id="@+id/btnRectangle"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/btnHourGlass" />

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="200dp"
        android:id="@+id/imageView9"
        android:background="@drawable/womenstyle"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
